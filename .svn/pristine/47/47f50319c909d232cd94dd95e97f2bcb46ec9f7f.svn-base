.box-container {
    position: absolute;
    width: 80%;
    height: 75%;
    outline: 1px solid black;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    font-family: "Arial", 10pt;
    span:first-of-type {
        position: absolute;
        left: 50%;
        transform: translate3d(-50%, -100%, 0);
    }

    span:nth-of-type(2) {
        position: absolute;
        top: 50%;
        transform: translate3d(-100%, -50%, 0);
    }
}
